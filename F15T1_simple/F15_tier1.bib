journal = {Biogeosciences},
month = {aug},
number = {2},
pages = {175--187},
publisher = {Copernicus GmbH},
title = {{Nitrous oxide fluxes and nitrogen cycling along a pasture chronosequence in Central Amazonia, Brazil}},
