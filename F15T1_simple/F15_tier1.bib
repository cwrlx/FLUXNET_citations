isbn = {1365-2486},
issn = {13541013},
journal = {Global Change Biology},
keywords = {Dry season,Ecosystem respiration,Eddy covariance,Gross ecosystem productivity,Neotropical rainforest,Net ecosystem productivity,Soild rought,Solar radiation},
month = {aug},
number = {8},
