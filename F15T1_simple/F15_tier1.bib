journal = {Agricultural and Forest Meteorology},
keywords = {Climate change,Ecosystem acclimation,Eddy covariance,Grassland,Inter-annual variability,Net ecosystem exchange},
month = {sep},
number = {9},
pages = {1233--1243},
publisher = {Elsevier BV},
title = {{Climatic controls and ecosystem responses drive the inter-annual variability of the net ecosystem exchange of an alpine meadow}},
