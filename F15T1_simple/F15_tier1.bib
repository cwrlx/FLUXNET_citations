doi = {10.1111/j.1365-2486.2004.00819.x},
isbn = {1354-1013},
issn = {13541013},
journal = {Global Change Biology},
keywords = {Biochemical compounds,Ecosystem respiration,Evergreen Mediterranean ecosystem,Growth analysis,Growth respiration,Quercus ilex},
