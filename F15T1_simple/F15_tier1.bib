pmid = {24383047},
publisher = {Wiley-Blackwell},
title = {{Seasonal and inter-annual variability of the net ecosystem CO{\textless}inf{\textgreater}2{\textless}/inf{\textgreater} exchange of a temperate mountain grassland: Effects of weather and management}},
url = {https://doi.org/10.1029{\%}2F2007jd009286 http://www.agu.org/pubs/crossref/2008/2007JD009286.shtml http://doi.wiley.com/10.1029/2007JD009286},
