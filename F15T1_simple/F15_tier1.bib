issn = {01681923},
journal = {Agricultural and Forest Meteorology},
keywords = {Bowen ratio,Canopy surface conductance (gc),Decoupling factor ($\Omega$),Eddy covariance,LE/LEeq},
month = {nov},
number = {11},
pages = {1800--1809},
publisher = {Elsevier {\{}BV{\}}},
title = {{Energy balance and partition in Inner Mongolia steppe ecosystems with different land use types}},
